from django.conf.urls.static import static
from django.conf.urls.defaults import patterns, url, include

from django.contrib import admin
from admin_apps.settings import local as settings
from api import BillingRecordResource
billing_record_resource = BillingRecordResource()

admin.autodiscover()

urlpatterns = patterns('',
    #url(r'^login/$', 'django.contrib.auth.views.login'),
    #url(r'^logout/$', 'billing_record.views.logout_page'),
    (r'^admin/doc/', include('django.contrib.admindocs.urls')),
    (r'^admin/', include(admin.site.urls)),
    (r'^billing/', include('billing_record.urls')),
    (r'^api/', include(billing_record_resource.urls)),
)

if settings.DEBUG and settings.MEDIA_ROOT:
    urlpatterns += static(settings.MEDIA_URL,
        document_root=settings.MEDIA_ROOT)
